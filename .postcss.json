{
    "use": ["stylelint", "autoprefixer", "postcss-reporter"],
    "input": "styles/*.css",
    "replace": true,
    "autoprefixer": {
        "browsers": [
            "last 2 version",
            "not ie <= 11"
        ],
        "casecade": false
    },
    "postcss-reporter": {
        "clearMessages": true
    }
}
